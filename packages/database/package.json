{
  "name": "@rental-platform/database",
  "version": "1.0.0",
  "description": "Database layer for Ethiopian Rental Platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "prisma generate --watch",
    "build": "tsc",
    "clean": "rm -rf dist node_modules/.prisma node_modules/@prisma",
    "migrate:dev": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:reset": "prisma migrate reset --force",
    "migrate:status": "prisma migrate status",
    "studio": "prisma studio",
    "seed": "tsx scripts/seed.ts",
    "reset": "prisma migrate reset --force && tsx scripts/seed.ts",
    "generate": "prisma generate",
    "db:push": "prisma db push",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@prisma/client": "^5.7.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@types/node": "^20.10.0",
    "@types/validator": "^13.15.10",
    "bcryptjs": "^2.4.3",
    "date-fns": "^2.30.0",
    "prisma": "^5.7.0",
    "tsx": "^4.6.1",
    "typescript": "^5.3.0"
  }
}
