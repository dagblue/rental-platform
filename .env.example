# ========================
# APPLICATION
# ========================
NODE_ENV=development
APP_NAME="Ethiopian Rental Platform"
APP_VERSION=1.0.0
PORT=3000
FRONTEND_PORT=5173
API_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ========================
# DATABASE
# ========================
DATABASE_URL="postgresql://rental:rental123@localhost:5432/rental_platform?schema=public"
SHADOW_DATABASE_URL="postgresql://rental:rental123@localhost:5432/rental_platform_shadow?schema=public"
DATABASE_SSL=false

# ========================
# REDIS
# ========================
REDIS_URL="redis://localhost:6379"
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TLS=false

# ========================
# AUTHENTICATION
# ========================
JWT_SECRET="change-this-to-a-very-secure-random-string-in-production"
JWT_REFRESH_SECRET="change-this-to-another-very-secure-random-string"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET="change-this-session-secret"

# ========================
# SECURITY
# ========================
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100
CORS_ORIGIN=http://localhost:5173

# ========================
# FILE UPLOAD
# ========================
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_PATH=./uploads
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_BUCKET_NAME=

# ========================
# ETHIOPIAN PAYMENT PROVIDERS
# ========================
MPESA_CONSUMER_KEY=
MPESA_CONSUMER_SECRET=
MPESA_PASSKEY=
MPESA_BUSINESS_SHORTCODE=
MPESA_ENVIRONMENT=sandbox

TELEBIRR_API_KEY=
TELEBIRR_MERCHANT_ID=
