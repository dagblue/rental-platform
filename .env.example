CBE_BIRR_API_KEY=
CBE_BIRR_MERCHANT_ID=

HELLOCASH_API_KEY=
HELLOCASH_MERCHANT_ID=

# ========================
# SMS/OTP SERVICE
# ========================
SMS_PROVIDER=africastalking
AFRICASTALKING_API_KEY=
AFRICASTALKING_USERNAME=
AFRICASTALKING_SENDER_ID=RENTAL
OTP_EXPIRY_MINUTES=10
OTP_LENGTH=6

TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ========================
# EMAIL SERVICE
# ========================
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@rental-platform.et

# ========================
# LOGGING
# ========================
LOG_LEVEL=info
LOG_PRETTY=true
LOG_FILE_PATH=./logs
SENTRY_DSN=

# ========================
# TRUST SYSTEM
# ========================
TRUST_UPDATE_INTERVAL=86400000  # 24 hours
MIN_TRUST_SCORE_LEVEL_1=30
MIN_TRUST_SCORE_LEVEL_2=60
MIN_TRUST_SCORE_LEVEL_3=80
MAX_TRUST_SCORE=100

# ========================
# MONITORING
